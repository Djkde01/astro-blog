---
import "../styles/global.css";

import MainLayout from "./MainLayout.astro";
import PostHeader from "../components/PostHeader.astro";
import CategoryCloud from "../components/CategoryCloud.astro";

const { frontmatter } = Astro.props;

const { title, description, date, category, image } = frontmatter;
---

<MainLayout title={title + " - Sergio Estrella"} {description}>
  <PostHeader {title} {description} {date} {category} {image} />
  <div class="post-content">
    <div class="content">
      <slot />
    </div>
    <div class="sidebar">
      <aside class="container" aria-label="Blog categories">
        <h3 class="h3">Todas las categor√≠as</h3>
        <CategoryCloud withCount={false} />
      </aside>
    </div>
  </div>
</MainLayout>
