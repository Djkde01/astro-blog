---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

import "../styles/global.css";
// Supports weights 100-900
import "@fontsource-variable/montserrat";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  frontmatter?: {
    title?: string;
    description?: string;
    image?: string;
  };
  robots?: string;
}

const {
  title = "Sergio Estrella",
  description = "Portafolio web de Sergio Estrella @djkde",
  image,
  frontmatter,
  robots,
} = Astro.props as Props;
---

<html lang="es">
  <MainHead {title} {description} {image} {frontmatter} {robots} />
  <body>
    <Nav />
    <main>
      <slot>
        <h1>Hello, world!</h1>
        <p>
          This is an Astro app.{" "}
          <a href="https://docs.astro.build/getting-started">
            Learn more about Astro.
          </a>
        </p>
      </slot>
    </main>
    <Footer />
  </body>
</html>
