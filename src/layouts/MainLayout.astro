---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";

import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Sergio Estrella",
  description = "Portafolio web de Sergio Estrella @djkde",
} = Astro.props as Props;
---

<html lang="en">
  <MainHead {title} {description} />
  <body>
    <Nav />
    <slot>
      <h1>Hello, world!</h1>
      <p>
        This is an Astro app.{" "}
        <a href="https://docs.astro.build/getting-started">
          Learn more about Astro.
        </a>
      </p>
    </slot>
    <Footer />
  </body>
</html>
