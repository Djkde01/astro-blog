---
import { slugify, formatDate } from "../js/utils";
import { Image } from "astro:assets";

const { category, title, date, image } = Astro.props;
---

<header>
  <div class="container">
    <small
      ><a href={`/category/${slugify(category)}`} class="badge">{category}</a
      ></small
    >
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width="1200"
    height="600"
    format="avif"
    class="hero-image"
    quality={80}
  />
  <h2 class="h2">{title}</h2>
  <p><a href={`/about`}>Sergio Estrella</a> - {formatDate(date)}</p>
</header>
